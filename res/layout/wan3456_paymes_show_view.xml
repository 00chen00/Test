<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/wan3456_paytitle_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/wan3456_money_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="38dip"
                android:background="@drawable/wan3456_pay_edit_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="@string/wan3456_t_rmb"
                    android:textColor="@color/wan3456_gray"
                    android:textSize="@dimen/wan3456_textsize2" />
                 <TextView
                    android:layout_width="0.5dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="7dip"
                    android:layout_marginBottom="7dip"
                    android:background="@drawable/wan3456_shu_bg"/>

                <EditText
                    android:id="@+id/wan3456_money"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="3dip"
                       android:layout_marginRight="10dip"
                    android:background="@color/wan3456_white"
                    android:digits="0123456789"
                    android:hint="@string/wan3456_t_pay_hint"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="5"
                    android:paddingLeft="2dip"
                    android:textColor="@color/wan3456_red"
                    android:textSize="@dimen/wan3456_textsize2" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             
                android:layout_marginLeft="2dip"
                android:text="@string/wan3456_t_pay_yuan"
                android:textColor="@color/wan3456_red"
                android:textSize="@dimen/wan3456_textsize1" />
        </LinearLayout>

        <TextView
            android:id="@+id/wan3456_pay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:textColor="@color/wan3456_red"
            android:textSize="@dimen/wan3456_textsize3" />

        <TextView
            android:id="@+id/wan3456_pay_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:textColor="@color/wan3456_gray"
            android:textSize="@dimen/wan3456_textsize2" />

        <TextView
            android:id="@+id/wan3456_pay_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:textColor="@color/wan3456_gray"
            android:textSize="@dimen/wan3456_textsize2" />
    </LinearLayout>

</LinearLayout>