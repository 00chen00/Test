<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wan3456_top_bg" >

        <TextView
            android:id="@+id/wan3456_web_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="15dip"
            android:textColor="@color/wan3456_white"
            android:textSize="20.0sp" />

        <Button
            android:id="@+id/wan3456_fra_web_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/wan3456_selector_back_bg"
            android:drawableLeft="@drawable/wan3456_selector_back"
            android:gravity="center"
            android:paddingBottom="3dip"
            android:paddingRight="3dip"
            android:paddingTop="3dip"
            android:textColor="@color/wan3456_white"
            android:textSize="15.0sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/wan3456_web_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/wan3456_selector_cancel" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/wan3456_web_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="3dip"
        android:progressDrawable="@drawable/wan3456_progressbar_bg"
        android:visibility="gone" />

    <WebView
        android:id="@+id/wan3456_web_webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>